{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/components": ["src/components/*"],
      "@/icons": ["src/icons/*"],
      "@/services": ["src/services/*"],
      "@/interfaces": ["src/interfaces/*"],
      "@/languages": ["src/languages/*"],
      "@/db": ["src/db/*"],
      "@/lib": ["src/lib/*"],
      "@/hooks": ["src/hooks/*"]
    }
  }
}
