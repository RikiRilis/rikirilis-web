---
import Discord from '@/icons/Discord.astro'
import GitHub from '@/icons/GitHub.astro'
import Instagram from '@/icons/Instagram.astro'
import X from '@/icons/X.astro'
import { getI18N } from '@/languages/index.ts'
import Divider from './Divider.astro'

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---

<footer class='flex w-full items-center justify-center bg-black'>
	<div class='flex w-full max-w-4xl flex-col px-4 py-10 sm:w-11/12 sm:px-6 md:w-8/12 lg:px-8'>
		<Divider />

		<div
			class='flex w-full flex-col-reverse items-center gap-4 md:justify-between md:gap-2 lg:flex-row lg:items-center'
		>
			<a
				href='https://fotoestudioelchevere.com/'
				class='order-1 flex max-w-16 items-center justify-center lg:order-none'
			>
				<img
					src='/logo.svg'
					class='w-full'
					alt='Logo Foto Estudio El Chévere'
					loading='lazy'
					decoding='async'
				/>
			</a>
			<p
				class='dark:text-primary max-w-md text-pretty text-center text-sm text-slate-600 lg:text-start'
			>
				&#169; 2025 RikiRilis. {i18n.FOOTER_TXT_1}
				<a
					rel='noopener noreferrer'
					href='https://rikirilis.com'
					class='text-accent font-bold transition-colors active:text-slate-700 active:underline dark:active:text-slate-300 sm:hover:text-slate-700 sm:hover:underline dark:sm:hover:text-slate-300'
					>RikiRilis</a
				>
				(Rikelvi Capellán García) {i18n.FOOTER_TXT_2}
				<a
					rel='noopener noreferrer'
					href='https://astro.build'
					target='_blank'
					class='text-accent font-bold transition-colors active:text-slate-700 active:underline dark:active:text-slate-300 sm:hover:text-slate-700 sm:hover:underline dark:sm:hover:text-slate-300'
					>Astro</a
				>, <a
					rel='noopener noreferrer'
					href='https://tailwindcss.com'
					target='_blank'
					class='text-accent font-bold transition-colors active:text-slate-700 active:underline dark:active:text-slate-300 sm:hover:text-slate-700 sm:hover:underline dark:sm:hover:text-slate-300'
					>Tailwind CSS</a
				>
				{i18n.FOOTER_TXT_3}
				<a
					rel='noopener noreferrer'
					href='https://vercel.com'
					target='_blank'
					class='text-accent font-bold transition-colors active:text-slate-700 active:underline dark:active:text-slate-300 sm:hover:text-slate-700 sm:hover:underline dark:sm:hover:text-slate-300'
					>Vercel</a
				>.
			</p>

			<ul class='flex flex-row items-center gap-x-6'>
				<li>
					<a
						target='_blank'
						href='https://github.com/RikiRilis'
						rel='noopener noreferrer'
						aria-label="Rikelvi's GitHub brand logo will open in a new window"
						class='inline-block hover:scale-125 motion-safe:transition motion-reduce:hover:scale-100'
					>
						<GitHub
							class='active:text-accent sm:hover:text-accent dark:text-primary size-8 text-slate-600 transition-colors motion-reduce:duration-0'
						/>
					</a>
				</li>
				<li>
					<a
						target='_blank'
						href='https://instagram.com/rikirilis'
						rel='noopener noreferrer'
						aria-label="Rikelvi's Instagram brand logo will open in a new window"
						class='inline-block hover:scale-125 motion-safe:transition motion-reduce:hover:scale-100'
					>
						<Instagram
							class='active:text-accent sm:hover:text-accent dark:text-primary size-10 text-slate-600 transition-colors motion-reduce:duration-0'
						/>
					</a>
				</li>
				<li>
					<a
						target='_blank'
						href='https://twitter.com/rikirilis_'
						rel='noopener noreferrer'
						aria-label="Rikelvi's X brand logo will open in a new window"
						class='inline-block hover:scale-125 motion-safe:transition motion-reduce:hover:scale-100'
					>
						<X
							class='active:text-accent sm:hover:text-accent dark:text-primary size-8 text-slate-600 transition-colors motion-reduce:duration-0'
						/>
					</a>
				</li>
				<li>
					<a
						target='_blank'
						href='https://discord.gg/VDk8tprcH2'
						rel='noopener noreferrer'
						aria-label="Rikelvi's Discord brand logo will open in a new window"
						class='inline-block hover:scale-125 motion-safe:transition motion-reduce:hover:scale-100'
					>
						<Discord
							class='active:text-accent sm:hover:text-accent dark:text-primary size-10 text-slate-600 transition-colors motion-reduce:duration-0'
						/>
					</a>
				</li>
			</ul>
		</div>
	</div>
</footer>
