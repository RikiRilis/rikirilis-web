---
import GitHub from "@/icons/GitHub.astro";
import Discord from "@/icons/Discord.astro";
import X from "@/icons/X.astro";
import Instagram from "@/icons/Instagram.astro";
import { getI18N } from "@/languages/index.ts";

const { currentLocale } = Astro;
const i18n = getI18N({currentLocale});
---

<footer class="flex flex-col w-full items-center">
  <div class="flex flex-col w-11/12 sm:w-3/4 lg:w-[65%] py-10">
    <hr
      class="hidden sm:inline-block w-full h-0.5 bg-gradient-to-r from-transparent via-cyan-800 to-transparent my-6 border-0"
    />

    <div
      class="flex flex-col items-center gap-y-6 sm:gap-x-8 sm:gap-y-0 sm:items-center md:flex-row sm:justify-between w-full"
    >
      <hr
        class="sm:hidden w-full h-0.5 bg-gradient-to-r from-transparent via-cyan-800 to-transparent my-6 border-0"
      />

      <p class="text-sm text-slate-400">
        {i18n.FOOTER_TXT_1} <a
          rel="noopener noreferrer"
          href="https://rikirilis.xyz"
          class="text-cyan-600 sm:hover:text-slate-300 active:text-slate-300 transition-colors font-bold sm:hover:underline active:underline"
          >RikiRilis</a
        >
        (Rikelvi Capellán García) {i18n.FOOTER_TXT_2} <a
          rel="noopener noreferrer"
          href="https://astro.build"
          target="_blank"
          class="text-cyan-600 sm:hover:text-slate-300 active:text-slate-300 transition-colors font-bold sm:hover:underline active:underline"
          >Astro</a
        >, <a
          rel="noopener noreferrer"
          href="https://tailwindcss.com"
          target="_blank"
          class="text-cyan-600 sm:hover:text-slate-300 active:text-slate-300 transition-colors font-bold sm:hover:underline active:underline"
          >Tailwind CSS</a
        > {i18n.FOOTER_TXT_3} <a
          rel="noopener noreferrer"
          href="https://vercel.com"
          target="_blank"
          class="text-cyan-600 sm:hover:text-slate-300 active:text-slate-300 transition-colors font-bold sm:hover:underline active:underline"
          >Vercel</a
        >.
      </p>

      <hr
        class="w-full h-0.5 bg-gradient-to-r from-transparent via-cyan-800 to-transparent my-6 border-0 md:hidden"
      />

      <ul class="flex flex-row gap-x-6 items-center">
        <li>
          <a
            target="_blank"
            href="https://github.com/RikiRilis"
            rel="noopener noreferrer"
            aria-label="Rikelvi's GitHub brand logo will open in a new window"
            class="inline-block hover:scale-125 motion-safe:transition
            motion-reduce:hover:scale-100"
          >
            <GitHub
              class="size-7 text-slate-400 transition-colors duration-300 sm:hover:text-cyan-600 active:text-cyan-600 motion-reduce:duration-0"
            />
          </a>
        </li>
        <li>
          <a
            target="_blank"
            href="https://discord.gg/VDk8tprcH2"
            rel="noopener noreferrer"
            aria-label="Rikelvi's Discord brand logo will open in a new window"
            class="inline-block hover:scale-125 motion-safe:transition
            motion-reduce:hover:scale-100"
          >
            <Discord
              class="size-10 text-slate-400 transition-colors duration-300 sm:hover:text-cyan-600 active:text-cyan-600 motion-reduce:duration-0"
            />
          </a>
        </li>
        <li>
          <a
            target="_blank"
            href="https://twitter.com/rikirilis_"
            rel="noopener noreferrer"
            aria-label="Rikelvi's X brand logo will open in a new window"
            class="inline-block hover:scale-125 motion-safe:transition
            motion-reduce:hover:scale-100"
          >
            <X
              class="size-7 text-slate-400 transition-colors duration-300 sm:hover:text-cyan-600 active:text-cyan-600 motion-reduce:duration-0"
            />
          </a>
        </li>
        <li>
          <a
            target="_blank"
            href="https://instagram.com/rikirilis"
            rel="noopener noreferrer"
            aria-label="Rikelvi's Instagram brand logo will open in a new window"
            class="inline-block hover:scale-125 motion-safe:transition
            motion-reduce:hover:scale-100"
          >
            <Instagram
              class="size-10 text-slate-400 transition-colors duration-300 sm:hover:text-cyan-600 active:text-cyan-600 motion-reduce:duration-0"
            />
          </a>
        </li>
      </ul>
    </div>
  </div>
</footer>
