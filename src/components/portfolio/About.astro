---
import Badge from '@/components/Badge.astro'
import Divider from '@/components/Divider.astro'
import SocialPill from '@/components/SocialPill.astro'
import Binoculars from '@/icons/Binoculars.astro'
import Chat from '@/icons/Chat.astro'
import Check from '@/icons/Check.astro'
import GitHub from '@/icons/GitHub.astro'
import LinkedIn from '@/icons/LinkedIn.astro'
import { getI18N } from '@/languages/index.ts'

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---

<div class='flex w-full max-w-4xl flex-col sm:w-11/12 md:w-8/12'>
	<div class='flex w-full flex-row items-center gap-4'>
		<a
			id='img-container'
			href='https://rikirilis.com/portfolio'
			rel='noopener noreferrer'
			class='group relative size-20 overflow-hidden rounded-full shadow-lg shadow-black/30 ease-in-out sm:size-36 dark:shadow-black/60'
		>
			<img
				src='https://rikirilis.com/images/main-pic.webp'
				class='scale-105 object-cover transition duration-300 ease-in-out active:group-hover:scale-100 sm:group-hover:scale-100'
				height='1200'
				width='630'
				alt='Rikelvi Capellán portfolio picture'
			/>
		</a>

		<div class='flex flex-col items-start'>
			<h1 class='text-3xl text-slate-800 sm:text-4xl md:text-5xl dark:text-slate-200'>
				<strong>Rikelvi Capellán</strong>
			</h1>
			<h3 class='text-md text-slate-800 sm:text-xl dark:text-slate-200'>
				<strong>{i18n.ABOUT_TEXT_1}</strong>
			</h3>

			<a href='https://www.linkedin.com/in/rikirilis/' target='_blank' rel='noopener noreferrer'>
				<Badge>
					<Check class='mr-2 h-5 w-5 text-accent' />
					<h5 class='font-bold text-accent'>{i18n.AVAILABLE}</h5>
				</Badge>
			</a>
		</div>
	</div>

	<Divider />

	<div class='flex w-full flex-col items-center'>
		<h3 class='text-md font-semibold text-slate-600 sm:text-balance sm:text-xl dark:text-primary'>
			{i18n.ABOUT_TEXT_2}
			<strong class='text-accent'>{i18n.ABOUT_TEXT_3}</strong>
			{i18n.ABOUT_TEXT_6}
			<strong class='text-accent'>{i18n.ABOUT_TEXT_4}</strong>
			{i18n.FOOTER_TXT_2}
			<strong class='text-accent'>{i18n.ABOUT_TEXT_5}</strong>
			{i18n.ABOUT_TEXT_6}
			<strong class='text-accent'>{i18n.ABOUT_TEXT_7}</strong>
			{i18n.ABOUT_TEXT_8}
		</h3>

		<nav class='mb-2 mt-8 flex w-full flex-wrap gap-3'>
			<SocialPill
				target='_blank'
				rel='noopener noreferrer'
				href='https://www.linkedin.com/in/rikirilis/'
			>
				<LinkedIn class='size-6' />
				LinkedIn
			</SocialPill>

			<SocialPill target='_blank' rel='noopener noreferrer' href='https://github.com/RikiRilis'>
				<GitHub class='size-5' />
				GitHub
			</SocialPill>

			<SocialPill
				target='_blank'
				rel='noopener noreferrer'
				href='https://rikirilis.com/archives/web-cv.pdf'
			>
				<Binoculars class='size-6' />
				{i18n.WATCH_CV}
			</SocialPill>

			<SocialPill href='#contact'>
				<Chat class='size-5' />
				{i18n.CONTACT}
			</SocialPill>
		</nav>

		<Divider />
	</div>
</div>
