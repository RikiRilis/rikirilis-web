---
import Briefcase from '@/icons/Briefcase.astro'

interface Props {
	title: string
	description: string
	date: string
}

const { title, description, date } = Astro.props
---

<span
	class='fade-up-anim absolute -start-3 flex h-6 w-6 items-center justify-center rounded-full bg-slate-200 ring-8 ring-slate-300 dark:bg-cyan-950 dark:ring-slate-900'
>
	<Briefcase class='text-accent size-4' />
</span>

<h3 class='fade-up-anim text-accent ml-2 flex items-center text-xl font-bold'>
	{title}
</h3>

<time
	class='fade-up-anim text-primary dark:text-secondary mb-3 ml-2 block text-sm font-normal italic leading-none'
>
	{date}
</time>

<p
	class='fade-up-anim dark:text-primary mb-4 ml-2 text-pretty text-base font-normal text-slate-600'
>
	{description}
</p>
